datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id         Int      @id @default(autoincrement())
  login      String   @unique
  email      String   @unique
  password   String
  first_name String?
  last_name  String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  last_login DateTime @default(now())
  is_active  Boolean  @default(true)
  session    Session? @relation("UserSession")
}

model Session {
  id        String    @id
  user      User   @relation("UserSession", fields: [user_id], references: [id])
  user_id   Int    @unique
  created_at DateTime @default(now())
  expires_at DateTime @default(dbgenerated("now() + interval '1 day'"))
}
